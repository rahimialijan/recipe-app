<!-- app/views/public_recipes/index.html.erb -->
<h2>Public Recipe List</h2>
<div class="container">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @public_recipes.each do |recipe| %>
        <tr>
          <td><%= link_to recipe.name, recipe_path(recipe) %></td>
          <td><%= recipe.description %></td>
          <td>
            <%= link_to 'Details', recipe_path(recipe), class: 'btn btn-info btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Add New Recipe', new_recipe_path, class: "btn btn-primary" %>
</div>
