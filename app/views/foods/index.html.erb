<h1>Food List</h1>

<%= link_to 'Add New Food', new_food_path, class: "btn" %>

<table>
  <thead>
    <tr>
      <th>Food</th>
      <th>Measurement Unit</th>
      <th>Unit Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td><%= number_to_currency(food.price, unit: '$') %></td>
        <td>
          <%= link_to 'Delete', food_path(food), method: :delete, data: {turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this item?'}, class: "btn" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


