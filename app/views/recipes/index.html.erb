<h2>List of Recipe</h2>
<div class="container card d-flex justify-content-center">
  <div class="card align-self-center" style="width: 50rem;">
    <table class="table table-striped table-hover">
        <tbody>
        <% @recipes.each do |recipe| %>
            <tr>
                <td class="d-flex flex-column">
                <%= link_to recipe.name, recipe_path(recipe) %>
                <%= link_to 'delete', recipe_path(recipe), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm w-25" %> 
                </td>
                <td><%= link_to recipe.description, recipe_path(recipe) %></td>            
            </tr>
        <% end %>
      </tbody>      
    </table>
    <div>
    <%= link_to 'Add New Recipe', new_recipe_path, class:"btn btn-secondary" %>
    <%= link_to 'Public Recipes List', public_recipes_path, class:"btn btn-secondary" %>
    </div>
  </div> 
</div>
