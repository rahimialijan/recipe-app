<div class="container">
<%= form_with(model: @recipe, local: true, html: { class: 'form-group' }) do |form| %>

    <div>
        <%= form.label :name%>
        <%= form.text_field :name%>
    </div>

    <div>
        <%= form.label :preparation_time%>
        <%= form.number_field :preparation_time%>
    </div>

    <div>
        <%= form.label :cooking_time%>
        <%= form.number_field :cooking_time%>
    </div>

    <div>
        <%= form.label :description%>
        <%= form.text_area :description%>
    </div>

    <div>
        <%= form.label :user_id %>
        <%= form.collection_select :user_id, @users, :id, :name %>
    </div>  
    
    <div class="mb-3">
    <%= form.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>

</div>