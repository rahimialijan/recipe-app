
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
    <%= form_with(model: @recipe, local: true, html: { class: 'form-group' }) do |form| %>

        <div class="mb-3">
            <%= form.label :name, class: 'form-label'%>
            <%= form.text_field :name, class: 'form-control'%>
        </div>
    
        <div class="mb-3">
            <%= form.label :preparation_time, class: 'form-label'%>
            <%= form.number_field :preparation_time, class: 'form-control'%>
        </div>
    
        <div class="mb-3">
            <%= form.label :cooking_time, class: 'form-label'%>
            <%= form.number_field :cooking_time, class: 'form-control'%>
        </div>
    
        <div class="mb-3">
            <%= form.label :description, class: 'form-label'%>
            <%= form.text_area :description, class: 'form-control'%>
        </div>
    
        <div class="mb-3">
            <%= form.label :user_id, class: 'form-label'%>
            <%= form.collection_select :user_id, @users, :id, :name, class: 'form-control' %>
        </div>  
        
        <div class="mb-3">
        <%= form.submit "Create Recipe", class: 'btn btn-secondary' %>
      </div>
    <% end %>
    </div>
  </div>
</div>

